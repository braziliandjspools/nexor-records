// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

// Tabela para as ATUALIZAÇÕES MENSAIS
model Folder {
  id        Int      @id @default(autoincrement())
  name      String
  link      String   @unique
  category  String
  date      String
  monthSlug String
  createdAt DateTime @default(now())
}

// Tabela para os ACERVOS
model AcervoItem {
  id          Int      @id @default(autoincrement())
  name        String
  link        String   @unique
  category    String
  acervoSlug  String
  date        String
  createdAt   DateTime @default(now())
}
// Este é o seu arquivo de Schema do Prisma.
// Ele serve como o "desenho" do seu banco de dados.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

// Tabela para as ATUALIZAÇÕES MENSAIS
model Folder {
  id        Int      @id @default(autoincrement())
  name      String
  link      String   @unique
  category  String
  date      String
  monthSlug String
  createdAt DateTime @default(now())
}

// Tabela para os ACERVOS (ATUALIZADA)
model AcervoItem {
  id          Int      @id @default(autoincrement())
  name        String
  link        String   @unique
  category    String
  acervoSlug  String
  date        String   // NOVO CAMPO: Para agrupar por data, ex: "Novidades de 14/07/2025"
  createdAt   DateTime @default(now())
}

// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

// Model for monthly update folders
model Folder {
  id        Int      @id @default(autoincrement())
  name      String
  link      String   @unique
  category  String
  date      String
  monthSlug String
  createdAt DateTime @default(now())
}

// Model for archive items (e.g., Acervo 2023)
model AcervoItem {
  id          Int      @id @default(autoincrement())
  name        String
  link        String   @unique
  category    String
  acervoSlug  String
  date        String
  createdAt   DateTime @default(now())
}

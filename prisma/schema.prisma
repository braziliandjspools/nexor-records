// Este é o seu arquivo de Schema do Prisma.
// Ele serve como o "desenho" do seu banco de dados.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

// Tabela para as ATUALIZAÇÕES MENSAIS
model Folder {
  id        Int      @id @default(autoincrement())
  name      String
  link      String   @unique
  category  String
  date      String
  monthSlug String   // Identificador do mês para a URL. Ex: "julho-2025"
  createdAt DateTime @default(now())
}

// --- NOVA TABELA PARA OS ACERVOS ---
// Esta tabela vai armazenar os itens de páginas como "Acervos 2023".
model AcervoItem {
  id          Int      @id @default(autoincrement())
  name        String
  link        String   @unique
  category    String
  acervoSlug  String   // Para identificar a qual acervo o item pertence, ex: "acervo-2023"
  createdAt   DateTime @default(now())
}
